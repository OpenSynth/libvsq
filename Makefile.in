CC = @CC@
CXX = @CXX@
DEFS = @DEFS@
LIBS = @LIBS@

SRCS = \
    Handle.cpp \
    Lyric.cpp \
    MeasureLine.cpp \
    MeasureLineIterator.cpp \
    PhoneticSymbol.cpp \
    Tempo.cpp \
    TextStream.cpp \
    Timesig.cpp \
    TimesigList.cpp \
    VibratoBP.cpp \
    VibratoBPList.cpp \
    Event.cpp \
    EventList.cpp

OBJS = $(SRCS:.cpp=.o)
PROG = libvsq.a

all: $(PROG)

$(PROG): $(SRCS) $(OBJS)
	ar rcs $(PROG) $(OBJS)

.cpp.o:
	$(CXX) -c -o "$@" "$<"

clean:
	rm -f $(OBJS)
	rm -f $(PROG)

